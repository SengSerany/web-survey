<%- include('../template/head') -%>
    <div class="container">
        <h1>Modifier le sondage</h1>

        <form action="/survey/edit/<%= survey._id%>" method="POST">
            <div class="form-group">
                <label for="name">Nom du sondage:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= survey.name %>" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea name="description" id="description" class="form-control"><%= survey.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Modifier le sondage</button>
        </form>
    </div>
<%- include('../template/foot') -%>